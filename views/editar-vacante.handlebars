<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
    
        <h3>Informacion Principal</h3>
        <div class="campo">
            <label for="">Titulo</label>
            <input type="text" value="{{vacante.titulo}}" name="titulo" placeholder="Ej: NodeJS Developer" required>
        </div>
        <div class="campo">
            <label for="">Empresa</label>
            <input type="text" value="{{vacante.empresa}}" name="empresa" placeholder="Empresa Contratista" required>
        </div>
        <div class="campo">
            <label for="">Ubicaci√≥n</label>
            <input type="text" value="{{vacante.ubicacion}}" name="ubicacion" placeholder="Ciudad/Modalidad" required>
        </div>
        <div class="campo">
            <label for="">Salario (USD)</label>
            <input type="text" value="{{vacante.salario}}" name="salario" placeholder="Ej: $500 USD" required>
        </div>
        <div class="campo">
            <label for="">Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
                    <option value="" disabled selected>-- Selecciona --</option>
                    <option value="Freelance">Freelance</option>
                    <option value="completo">Tiempo Completo</option>
                    <option value="medio">Medio Tiempo</option>
                    <option value="proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>

        <h3>Descripcion del Puesto</h3>
        <div class="campo descripcion">
            <label for="">Descripcion</label>
            <input type="hidden" value="{{{vacante.descripcion}}}" id="x" name="descripcion" >
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar Cambio" class="btn btn-azul">
        </div>

    </form>
</main>