<main class="contenedor">
    <form action="/vacantes/nueva" method="POST" class="default-form">
    
        <h3>Informacion Principal</h3>
        <div class="campo">
            <label for="">Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: NodeJS Developer">
        </div>
        <div class="campo">
            <label for="">Empresa</label>
            <input type="text" name="empresa" placeholder="Empresa Contratista">
        </div>
        <div class="campo">
            <label for="">Ubicaci√≥n</label>
            <input type="text" name="ubicacion" placeholder="Ciudad/Modalidad">
        </div>
        <div class="campo">
            <label for="">Salario (USD)</label>
            <input type="text" name="salario" placeholder="Ej: $500 USD">
        </div>
        <div class="campo">
            <label for="">Contrato</label>
            <select name="contrato">
                <option value="" disabled selected>-- Selecciona --</option>
                <option value="Freelance">Freelance</option>
                <option value="completo">Tiempo Completo</option>
                <option value="medio">Medio Tiempo</option>
                <option value="proyecto">Por Proyecto</option>
            </select>
        </div>

        <h3>Descripcion del Puesto</h3>
        <div class="campo descripcion">
            <label for="">Descripcion</label>
            <input type="hidden" id="x" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>

    </form>
</main>